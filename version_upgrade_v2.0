RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[36m'
BLUE='\033]0;34m'
YELLOW='\033[1;33m'
NC='\033[0m'


# error function uses for handling common error cases
function error(){
	local value=$1
	local num=$2

	if [ ${num} -eq 1 ]; then
		local str="version changing failed"
	elif [ ${num} -eq 2 ]; then
		local str="install prozone packages failed"
	elif [ ${num} -eq 3 ]; then
		local str="install nftables package failed"
	elif [ ${num} -eq 4 ]; then
		local str="motd service confirm failed"
	else
		local str="Fail!"
	fi

	if [ ${value} -ne 0 ]; then
		echo -e $RED"Error : ${str}"$NC
		exit 1
	fi
}

